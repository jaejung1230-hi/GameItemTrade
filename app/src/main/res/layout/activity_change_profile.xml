<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProfileActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="75dp"
        app:cardElevation="0dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_for_change_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:scaleType = "fitXY"
            android:src="@drawable/nonephoto"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/tv_for_change_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나나니"
        android:textSize="20dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/bottom_boarder"
        android:gravity="center_horizontal" />
    <Button
        android:id="@+id/btn_for_change_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
    android:backgroundTint="@color/main_color"
        android:text="수정 완료"
        android:textSize="20dp"
        />
</LinearLayout>