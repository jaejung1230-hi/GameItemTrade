<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostReportActivity">

    <ImageView
        android:id="@+id/iv_itemImage_report"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nonephoto"/>

    <TextView
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_itemTitle"
        android:text="제목"
        android:textSize="30dp" />

    <TextView
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_price"
        android:text="00000원"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/report_gametitle"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/report_gameserver"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/report_reason"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_suspect"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/report_explain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>