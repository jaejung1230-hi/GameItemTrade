<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bottom_boarder"
    android:layout_marginBottom="10dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerInside"
        android:src="@drawable/ic_siren"
        android:layout_weight="3"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="이름자리"
            android:id="@+id/reportlist_recycler_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:textSize="15dp"
            android:padding="5dp"
            android:text="나쁜 놈"
            android:textColor="@color/red"
            android:background="@drawable/item_sold_out"
            android:id="@+id/reportlist_recycler_suspect"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="메이플스토리/오로라/게임머니"
                android:textSize="15dp"
                android:id="@+id/reportlist_recycler_explain" />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>